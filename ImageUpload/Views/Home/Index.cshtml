@model HomeViewModel
@{
  ViewData["Title"] = "Image upload";
}

<div>
  <h1>Image uploader</h1>
  <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file"/>
    <input type="submit"/>
  </form>
  <hr/>
  @if (!string.IsNullOrEmpty(Model.Base64ImageSource))
  {
    <img src="@Model.Base64ImageSource" alt="Uploaded image"/>
  }
</div>